<UserControl x:Class="InventoryControlLib.InventoryGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryControlLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox x:Name="gb" Header="{Binding Name}" Margin="10" Padding="10">
        <Grid>
            <Image HorizontalAlignment="Left" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=Inventory}" Height="{Binding ActualHeight, ElementName=Inventory}" Source="https://static.wikia.nocookie.net/metro2033/images/c/cd/ME_Render_Backpack.png/revision/latest/scale-to-width-down/340?cb=20190813173530"/>
            <Grid x:Name="Inventory" HorizontalAlignment="Left" VerticalAlignment="Top" local:GridHelpers.ColumnCount="{Binding Columns}" local:GridHelpers.RowCount="{Binding Rows}">
            </Grid>
        </Grid>
    </GroupBox>
</UserControl>
